{
    "extends": "next/core-web-vitals",
    "rules": {
        "prefer-arrow-callback": "error",
        "no-console": ["warn", { "allow": ["warn", "error"] }],
        "sort-imports": [
            "error",
            {
                "ignoreCase": true,
                "ignoreDeclarationSort": true,
                "ignoreMemberSort": true
            }
        ],
        "import/order": [
            "error",
            {
                "groups": ["builtin", "external", "internal"],
                "pathGroups": [
                    {
                        "pattern": "react",
                        "group": "external",
                        "position": "before"
                    }
                ],
                "newlines-between": "always"
            }
        ]
    }
}
